.header{
  width: 100%;
  height: 400rpx;
  background: #39b5de;
  border-bottom: 25rpx solid #f3f3f3;
}
.avatar{
  position: absolute;
  left: 0; right: 0;
  width: 128rpx;
  height: 128rpx;
  margin: 72rpx auto;
  border-radius: 50%;
  border: 3px solid white;
}
.nickname{
  position: absolute;
  top: 40rpx;
  left: 0rpx;right: 0rpx;
  width: 100%;
  margin:220rpx auto;
  color: white;
  text-align: center;
  font-size: 30rpx;
}
.level{
  color: white;
  padding: 5rpx 40rpx;
  border-radius: 20rpx;
  background: rgba(0,0,0,0.4);
